    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "seed": "npx ts-node src/modules/seeder/pemKeys.seeder.ts && npm run build && node dist/modules/seeder/seeder.module",
    "seed:refresh": "npm run build && node dist/modules/seeder/seeder.module --refresh"
